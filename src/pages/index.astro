		<section id="videoonhover" x-data class="max-w-4xl mx-auto mt-32 cursor cursor-handcursor border">
			<video width="1280" height="960" x-ref="hovervideo" @mouseenter="$refs.hovervideo.play()" @mouseleave="$refs.hovervideo.pause()" poster="/image.png">
